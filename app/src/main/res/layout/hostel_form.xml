<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8CE0C795"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ComplaintForm"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/complaintlogo"
                android:elevation="30dp"

                android:fontFamily="@font/inknut_antiqua"
                android:gravity="center|center_horizontal"
                android:text="Complaint Form"
                android:textColor="#070707"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5dp"

                android:text="@string/name"
                android:textColor="#000000"
                android:textSize="16sp" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="306dp"
                android:layout_height="149dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/room">

            </com.airbnb.lottie.LottieAnimationView>

            <TextView

                android:id="@+id/Roomtextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/inknut_antiqua_medium"
                android:text="Flat No"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Room"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:height="46dp"
                android:background="@drawable/compalint_form_box"
                android:text="" />

            <TextView
                android:id="@+id/Complainttextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/inknut_antiqua_medium"
                android:text="Complaint"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/compalint"
                android:layout_width="match_parent"
                android:layout_height="173dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:height="173dp"
                android:background="@drawable/compalint_form_box"
                android:ems="10"
                android:gravity="start|end"
                android:inputType="textPersonName"
                android:padding="20dp"
                android:paddingLeft="10dp"
                android:text="" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inknut_antiqua"
                android:gravity="center|center_horizontal"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>